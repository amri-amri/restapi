<configuration>
    <!-- Define the log file and its properties -->
    <appender name="RESTAPI" class="ch.qos.logback.core.FileAppender">
        <file>target/logs/restapi.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="info">
        <appender-ref ref="FILE"/>
    </root>

    <logger name="diagnostics" level="TRACE" additivity="false">
        <appender-ref ref="RESTAPI"/>
    </logger>
    <logger name="method-call" level="info" additivity="false">
        <appender-ref ref="RESTAPI"/>
    </logger>
</configuration>
